                        div(class="header-icon search-icon") 
                    input(type="text" style="background: #fff" placeholder="Boston, MA" class="form" id="searchInput")
                    input(type="text" placeholder="11/3/2020-11/9/2020" class="form" id="dates" style="font-size: 1.25em; padding: 28px 20px; background: #fff;")
                    input(type="text" placeholder="Beds" class="form" id="beds" style="font-size: 1.25em; padding: 28px 20px; background: #fff;")
                    button(id="searchBtn" class="search" onclick="runSearch()") Search Hotels
